// packages/ui/src/components/ScrollToBottomButton.tsx
import React from 'react';

interface ScrollToBottomButtonProps {
    // 滚动函数
    onClick: () => void;

    // 是否显示按钮
    visible?: boolean;

    // 按钮标题
    title?: string;

    // 按钮位置: 'center'(容器底部中间) 或 'corner'(右下角)
    position?: 'center' | 'corner';

    // 自定义按钮CSS类
    className?: string;

    // 自定义容器CSS类，用于微调按钮定位
    containerClassName?: string;
}

/**
 * 滚动到底部按钮组件
 * 独立的按钮组件，可以放置在容器底部中央或右下角
 * @deprecated
 */
export const ScrollToBottomButton: React.FC<ScrollToBottomButtonProps> = ({
    onClick,
    visible = true,
    title = '滚动到底部',
    position = 'center',
    className = '',
    containerClassName = 'absolute bottom-4 left-1/2 transform -translate-x-1/2'
}) => {
    if (!visible) return null;

    // 确定按钮形状和大小
    const shapeClass = position === 'center'
        ? 'rounded-full bg-blue-500 bg-opacity-80 shadow-xs text-white px-4 py-2 flex items-center gap-1'
        : 'rounded-full bg-blue-500 shadow-xs text-white p-2';

    return (
        <button
            onClick={onClick}
            className={`${containerClassName} ${shapeClass} hover:bg-blue-600 transition-colors ${className}`}
            title={title}
        >
            {position === 'center' ? (
                <>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        strokeWidth="2"
                        strokeLinecap="round"
                        strokeLinejoin="round"
                    >
                        <path d="M12 19V5M5 12l7 7 7-7" />
                    </svg>
                    <span>{title}</span>
                </>
            ) : (
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    strokeWidth="2"
                    strokeLinecap="round"
                    strokeLinejoin="round"
                >
                    <path d="M12 19V5M5 12l7 7 7-7" />
                </svg>
            )}
        </button>
    );
};