{
    "appId": "com.hexart.promptbooster",
    "productName": "Prompt Booster",
    "directories": {
        "output": "release"
    },
    "files": [
        {
            "from": "../web/dist",
            "to": "web"
        },
        "main.js",
        "preload.js",
        "package.json"
    ],
    "mac": {
        "target": "dmg",
        "icon": "build/icon.icns"
    },
    "win": {
        "target": [
            "nsis"
        ]
    },
    "linux": {
        "target": "AppImage"
    }
}