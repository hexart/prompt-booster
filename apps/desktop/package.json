{
  "name": "desktop",
  "private": true,
  "version": "0.1.0",
  "description": "Prompt Optimizer Desktop App",
  "author": "Hexart Studio",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "clean": "rm -rf .turbo node_modules dist release",
    "fix-preload": "node ./fix-preload.js",
    "prebuild:electron": "node ./fix-preload.js && node ./build-electron.js",
    "electron:dev": "node ./electron-start.js",
    "electron:build": "npm run build && node ./build-electron.js && electron-builder --config electron-builder.config.js",
    "electron:build:mac": "npm run build && node ./build-electron.js && electron-builder --mac --config electron-builder.config.js",
    "electron:build:win": "npm run build && node ./build-electron.js && electron-builder --win --config electron-builder.config.js",
    "electron:build:linux": "npm run build && node ./build-electron.js && electron-builder --linux --config electron-builder.config.js",
    "electron:publish": "npm run build && node ./build-electron.js && electron-builder --publish always --config electron-builder.config.js",
    "postinstall": "electron-builder install-app-deps || npm install electron@latest --no-save"
  },
  "dependencies": {
    "@prompt-booster/api": "file:../../packages/api",
    "@prompt-booster/core": "file:../../packages/core",
    "@prompt-booster/ui": "file:../../packages/ui",
    "electron-updater": "^6.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@electron/notarize": "^2.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "electron-builder-squirrel-windows": "26.0.12",
    "dmg-builder": "26.0.12",
    "app-builder-lib": "26.0.12",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "electron-builder-squirrel-windows",
        "dmg-builder"
      ]
    }
  }
}