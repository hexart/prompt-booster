# 使用淘宝镜像
ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/
ELECTRON_CUSTOM_DIR={{ version }}

# 如果需要，强制使用远程校验和
electron_use_remote_checksums=1

# 跳过审计和资金提示，减少警告消息
audit=false
fund=false

# 设置较长的超时时间，避免网络问题
fetch-timeout=300000

# 处理废弃包的覆盖配置
public-hoist-pattern[]=*rimraf*
public-hoist-pattern[]=*glob*